{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "commonjs",
    "removeComments": true,
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "exclude": [ "./dist/", "./node_modules/" ],
  "compileOnSave": false
}
